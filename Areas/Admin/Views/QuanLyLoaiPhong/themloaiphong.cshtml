@model QuanLyKhachSan.Areas.Admin.Models.ThemLoaiPhong
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Themloaiphong";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="dasboard-desciption">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="padding-top" style="height: 62px;"></div>
                <div class="header-inner">
                    <form action="
                            " style="width: 100%;">
                        <div class="iner-search">
                            <div class="left" style="display: flex;">
                                <input type="text" class="form-control" placeholder="Search Here"
                                       aria-label="Username" aria-describedby="basic-addon1"
                                       style="box-shadow: none;">
                                <button type="button" class="btn-search">Tìm kiếm</button>
                            </div>
                            <div class="sidebar-btn" id="sidebar-active">
                                <i class="fa fa-bars"></i>
                            </div>
                            <div class="admin-icon">
                                <i class="fa fa-users"></i>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="slider">
                <p style="color: #fff; padding-left: 40px;">Quản lý loại phòng</p>
            </div>
            <div class="image">
                <div class="container-fluid">
                    <div class="row">
                        <form asp-area="Admin" asp-controller="QuanLyLoaiPhong" asp-action="ThemLoaiPhong" method="post" enctype="multipart/form-data">
                            <div class="col-lg-10">
                                <div class="image-title" style="margin-bottom: 50px;">
                                    <h2>Thêm mới loại phòng</h2>
                                    <h6>Cập nhật thông tin loại phòng: </h6>
                                </div>
                                <div class="image-infor">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1" style="display: inline-block; width: 150px;">Tên loại phòng</span>
                                        <input name="TenLoaiPhong" type="text" class="form-control" placeholder="Tên loại phòng" aria-describedby="basic-addon1">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="button-group">
                                    <button class="setting-btn">Thêm mới</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

