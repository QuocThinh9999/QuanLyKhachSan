@model QuanLyKhachSan.Areas.Admin.Models.ThemTuVan
@inject QuanLyKhachSan.Models.DbQuanLyKhachSanContext context
@{
    ViewData["Title"] = "Room Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="header__section">
    <div class="top__nav">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 ">
                    <ul class="tn-left">
                        <li>
                            <i class="fa fa-phone"></i>
                            @context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="SĐT").MoTa
                        </li>
                        <li>
                            <i class="fa fa-envelope"></i>
                            @context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Email").MoTa
                        </li>
                    </ul>
                </div>
                <div class="col-lg-6 col-md-12 ">
                    <div class="tn-right">
                        <div class="social" style="margin:10px">
                            <a href="@context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Link Facebook").MoTa"><i class="fab fa-facebook-f"></i></a>
                            <a href="@context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Link Instagram").MoTa"><i class="fab fa-instagram"></i></a>
                            <a href="@context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Link YouTube").MoTa"><i class="fab fa-youtube"></i></a>
                            <a href="@context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Link Linkedin").MoTa"><i class="fab fa-linkedin"></i></a>
                            <a href="@context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Link Twitter").MoTa"><i class="fab fa-twitter"></i></a>
                        </div>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bot_nav">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="logo">
                        <a href="home.html">
                            <img src="../img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-lg-10 left">
                    <div class="menu">
                        <div class="menu_left">
                            <ul>
                                <li><a href="@Url.Action("Home", "Home", new { Areas="" })">Trang chủ</a></li>
                                <li ><a href=" @Url.Action("DanhSachPhong", "Phong", new { Areas="" })">Phòng</a></li>
                                <li><a href ="@Url.Action("DanhSachVeChungToi", "VeChungToi", new { Areas=""})">Về chúng tôi</a></li>
                                <li><a href="@Url.Action("DanhSachBaiViet", "BaiViet", new { Areas=""})">Bài viết</a></li>
                                <li class="active"><a href="@Url.Action("LienLac", "LienLac", new { Areas=""})">Liên hệ</a></li>
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="~/front-end/css/contact.css">
</header>
<div class="contact-infor">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="address">
                    <h2>Thông tin liên lạc</h2>
                    <p>
                        Chào mừng quý khách đến với khách sạn chúng tôi! Hãy để chúng tôi là điểm đến lý tưởng cho
                        kỳ
                        nghỉ của bạn!
                    </p>
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    Địa chỉ:
                                </td>
                                <td>
                                    @context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Địa Chỉ").MoTa
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Số điện thoại:
                                </td>
                                <td>@context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="SĐT").MoTa</td>
                            </tr>
                            <tr>
                                <td>
                                    Email:
                                </td>
                                <td>@context.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Email").MoTa</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="col-lg-7 offset-lg-1">
                <form asp-controller="LienLac" asp-action="LienLac" method="post" enctype="multipart/form-data">
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text" placeholder="Tên" style="width: 100%;" name="Ten">
                            </div>
                            <div class="col-lg-6">
                                @if (Model != null && Model.Email != null)
                                {
                                    <input type="text" style="width: 100%;" value="@Model.Email" name="Email">
                                }
                                else
                                {
                                    <input type="text" placeholder="Email" style="width: 100%;" name="Email">
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <textarea id="" style="width: 100%;" placeholder="Lời nhắn của bạn" name="LoiNhan"></textarea>
                            </div>
                        </div>
                        <button type="submit">Gửi ngay</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div class="map">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="margin-bottom: 50px;">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.654956304175!2d106.6657830748696!3d10.761053189386807!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ee4595019ad%3A0xf2a1b15c6af2c1a6!2zxJDhuqFpIGjhu41jIEtpbmggdOG6vyBUUC4gSOG7kyBDaMOtIE1pbmggKEPGoSBz4bufIEIp!5e0!3m2!1svi!2s!4v1701528650977!5m2!1svi!2s" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>